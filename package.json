{
  "name": "marpat",
  "version": "1.19.1",
  "description": "A class-based ES6 ODM for Mongo-like databases.",
  "author": {
    "name": "Lui de la Parra",
    "email": "lui@mutesymphony.com",
    "url": "http://mutesymphony.com"
  },
  "scripts": {
