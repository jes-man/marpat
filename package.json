    "generate-docs": "mos"
  },
  "keywords": [
    "es6",
    "odm",
    "mongodb",
    "nedb",
    "nosql",
    "document",
    "model",
    "schema",
    "database",
    "data",
    "datastore",
    "query",
    "db"
  ],
  "homepage": "https://github.com/luidog/marpat",
  "repository": {
    "type": "git",
    "url": "git@github.com:luidog/marpat.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0"
  },
  "mos": {
    "plugins": [
      "execute"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "optionalDependencies": {
    "nedb": "1.8.0",
    "mongodb": "^3.1.8"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "eslint": "^5.8.0",
    "eslint-config-google": "^0.11.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jsdocs": "^1.0.0",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mos": "^1.3.1",
    "mos-plugin-dependencies": "^2.2.2",
    "mos-plugin-execute": "^1.0.2",
    "mos-plugin-license": "^1.2.2",
    "nyc": "^13.1.0",
    "prettier": "^1.14.3",
    "varium": "^1.0.1"
  }
}
